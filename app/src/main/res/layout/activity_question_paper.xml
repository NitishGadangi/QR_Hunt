                        android:id="@+id/tv_head_q1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="clue 1"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_ques_q1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_status_q1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="clue yet to be solved"
                        android:textColor="@color/A400red"
                        android:textSize="16sp" />

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/tv_verify_q1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp"
                        fancy:fb_borderColor="#FFFFFF"
                        fancy:fb_borderWidth="1dp"
                        fancy:fb_defaultColor="#7ab800"
                        fancy:fb_focusColor="#222222"
                        fancy:fb_fontIconResource="&#xf029;"
                        fancy:fb_iconPosition="left"
                        fancy:fb_radius="30dp"
                        fancy:fb_text="Verify QR"
                        fancy:fb_textColor="#FFFFFF" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

